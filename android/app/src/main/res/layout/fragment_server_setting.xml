<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="planner.fitness.com.fitnessplanner.controller.setting.server.ServerSettingFragment"
    android:paddingBottom="@dimen/dimen_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <planner.fitness.com.fitnessplanner.view.RelativeLayoutRatio
            android:id="@+id/view_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_8"
            app:ratio="16:9" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/view_ratio"
            android:layout_alignTop="@id/view_ratio"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/city" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/view_ratio"
            android:layout_alignStart="@id/view_ratio"
            android:layout_alignBottom="@id/view_ratio"
            android:text="@string/state" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_marginRight="@dimen/dimen_8"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_16"/>

</LinearLayout>
